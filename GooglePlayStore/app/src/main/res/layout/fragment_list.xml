    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.example.juancho.googleplaystore.ListFragment"
        android:layout_width="match_parent"
        android:layout_height="230sp"
        android:id="@+id/cv"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginLeft="8sp"
                android:paddingBottom="8sp"
                android:paddingTop="8sp"
                android:id="@+id/titulo_categoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="New games"/>

            <TextView
                android:layout_marginLeft="8sp"
                android:paddingBottom="8sp"
                android:id="@+id/descripcion_categoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titulo_categoria"
                android:text="The best actualizations of the market"
                android:textSize="10sp"/>

            <Button
                android:id="@+id/see_more_btn"
                android:layout_width="wrap_content"
                android:layout_height="15sp"
                android:layout_above="@id/descripcion_categoria"
                android:text="see more"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:background="#fff"
                android:layout_alignParentRight="true"
                android:padding="0sp"
                android:shadowColor="#fff"
                android:textColor="#277b2b"
                style="?android:attr/borderlessButtonStyle"
                android:textSize="10sp"/>

            <android.support.v7.widget.RecyclerView
                android:layout_below="@id/descripcion_categoria"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rv"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
