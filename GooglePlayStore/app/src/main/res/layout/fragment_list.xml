<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.juancho.googleplaystore.ListFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:id="@+id/cv"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/titulo_categoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="New games"/>

            <TextView
                android:id="@+id/descripcion_categoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titulo_categoria"
                android:text="The best actualizations of the market"
                android:textSize="9sp"/>

            <Button
                android:id="@+id/see_more_btn"
                android:layout_width="wrap_content"
                android:layout_height="15sp"
                android:layout_below="@+id/titulo_categoria"
                android:text="see more"
                android:background="#fff"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/titulo_categoria"

                android:padding="0sp"
                android:textSize="9sp"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>
